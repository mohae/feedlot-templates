# Various definitions for basic desktop based development environments.

{
	# ubuntu 14.04 LTS w lubuntu desktop targeting virtualbox & vagrant.
	# VM Properties:
	#   1 cpu
	#   2048 RAM
	#   128 VRAM
	#   3d acceleration enabled
	#   bidirectional clipboard
	# Installed dev stuff (in addition to what comes with Ubuntu):
	#   build-essential
	#   libssl-dev
	#   libexpat1-dev
	#   gettext
	#   dart (latest stable release)
	#   typescript (npm)
	#   java (apt)
	#   lua 5.2
	#   rust (via rustup.sh)
	#   go (latest release)
	# Installed editors:
	#   vim
	#   emacs
	#   atom
	# Installed software (in addition to what comes with Ubuntu):
	#   git
	#   quassel
	#   chrome
	#   chromium
	#   curl
	#
	# Notes:
	#   * Timezone is set to America/Chicago; to change the timezone,
	#     modify the packer_sources/ubuntu/shell/timezone shell script.
	#   * The initial user is vagrant/vagrant.  To change this, modify
	#     the packer_sources/ubuntu/http/preseed.cfg file.
	"1504-lubuntu-dev-vbox-vagrant": {
		"description": "ubuntu 1404 lts amd64 w lubuntu desktop, some languages, and editors",
		"release": "14.04",
		"arch": "amd64",
		"distro": "ubuntu",
		"image": "server",
		"builder_types": [
			"virtualbox-iso"
		],
		"builders": {
			"virtualbox-iso": {
				"arrays": {
					"vboxmanage": [
						"cpus=1",
						"memory=2048",
						"vram=128",
						"accelerate3d=on",
						"clipboard=bidirectional"
					]
				}
			}
		},
		"provisioners": {
			"shell": {
				"arrays": {
					"scripts": [
						"setup",
						"sudoers",
						"user_vagrant",
						"desktop",
						"browsers",
						"editors",
						"dev",
						"go",
						"timezone",
						"vbox",
						"cleanup"
					]
				}
			}
		}
	},
	# Debian Jessie w lxde desktop and Go, targeting virtualbox.
	# VM Properties:
	#   1 cpu
	#   2048 RAM
	#   128 VRAM
	#   3d acceleration enabled
	#   bidirectional clipboard
	# Installed Go stuff:
	#   go (latest release)
	#   delve (A Go debugger)
	#   liteide (A Go ide)
	# Installed editors:
	#   vim w spf13-vim
	#   emacs
	#   atom
	# Installed software (in addition to what comes with Ubuntu):
	#   git
	#   quassel
	#   chrome
	#   chromium
	#   curl
	#   alsa-utils
	#   bzip2
	#   liblz4-tool
	#   rsync
	#   tree
	#   wget
	#   build-essential
	#   dkms
	#   linux-headers-$(uname -r)
	# Removed packages:
	#   xscreensaver
	#
	# Notes:
	#   * Timezone is set to America/Chicago; to change the timezone,
	#     modify the packer_sources/debian/shell/timezone shell script.
	#   * The initial user is vagrant/vagrant; to change it modify the
	#     packer_sources/debian/http/preseed.cfg file.
	"jessie-lxde-go-vbox": {
		"description": "Debian jessie amd64 virtualbox vagrant build w a Go dev environment",
		"distro": "debian",
		"release": "8",
		"arch": "amd64",
		"image": "netinst",
		"builder_types": [
			"virtualbox-iso"
		],
		"builders": {
			"virtualbox-iso": {
				"arrays": {
					"vboxmanage": [
						"cpus=1",
						"memory=2048",
						"vram=128",
						"accelerate3d=on",
						"clipboard=bidirectional"
					]
				}
			}
		},
		# unset the vagrant post-processor; no post-processor will be
		# used since none is set.
		"post_processor_types": [],
		"provisioners": {
			"shell": {
				"arrays": {
					"scripts": [
						"setup",
						"sudoers",
						"user_vagrant",
						"timezone",
						"desktop",
						"browsers",
						"editors",
						"go",
						"vbox",
						"cleanup"
					]
				}
			}
		}
	}
}
